{
  "manifest_version": 3,
  "name": "Financial News Videos",
  "version": "1.0",
  "description": "Latest videos from Moneycontrol and Zee Business YouTube channels",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
} 